<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".FilterFragment">
    <RadioButton
            android:text="Networking"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/radioButton7" android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/radioButton1" app:layout_constraintEnd_toEndOf="parent"
    />
    <RadioButton
            android:text="Parallel Computation"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/radioButton8" android:layout_weight="1"
            app:layout_constraintStart_toEndOf="@+id/radioButton2"
            app:layout_constraintTop_toBottomOf="@+id/radioButton7" app:layout_constraintEnd_toEndOf="parent"
    />
    <RadioButton
            android:text="Software Engineering"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/radioButton9" android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/radioButton8"
            app:layout_constraintStart_toEndOf="@+id/radioButton3" app:layout_constraintEnd_toEndOf="parent"
    />
    <RadioButton
            android:text="Systems"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/radioButton10" android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/radioButton9"
            app:layout_constraintStart_toEndOf="@+id/radioButton4" app:layout_constraintEnd_toEndOf="parent"
    />
    <RadioButton
            android:text="Theory"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/radioButton11" android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/radioButton10"
            app:layout_constraintStart_toEndOf="@+id/radioButton5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <RadioButton
            android:text="AI"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/radioButton1" android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toStartOf="@+id/radioButton7"
    />
    <RadioButton
            android:text="Bioinformatics"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/radioButton1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/radioButton8"/>
    <RadioButton
            android:text="Data Mining"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/radioButton3" android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton2"
            app:layout_constraintEnd_toStartOf="@+id/radioButton9"/>
    <RadioButton
            android:text="Databases"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/radioButton4" android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/radioButton3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/radioButton10"/>
    <RadioButton
            android:text="HCI"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/radioButton5" android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton4"
            app:layout_constraintEnd_toStartOf="@+id/radioButton11"/>
    <RadioButton
            android:text="Knowledge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/radioButton6" android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/radioButton5" app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="Search By:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="30sp"/>
    <TextView
            android:text="Area"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"/>
    <TextView
            android:text="Professor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/radioButton6"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toList_bt" android:layout_marginEnd="17dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="17dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/prof_filter"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>